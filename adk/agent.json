{
  "name": "Mise No Mess - Indian Restaurant Menu Analyzer",
  "description": "Analyzes Indian restaurant menus to find kitchen inefficiencies, overloaded stations, bottlenecks, and generates operational reports.",
  "model": "gemini-2.5-flash",
  "system_instruction": "You analyze Indian restaurant menus (Butter Chicken, Paneer Tikka, Veg Biryani, Dal Makhani, Masala Dosa, etc). When the user uploads a menu or pastes text, you MUST call parse_menu → analyze_conflicts → generate_report in that order. Always return both structured JSON and a human-readable explanation.",
  "tools": [
    {
      "name": "parse_menu",
      "type": "http",
      "method": "POST",
      "url": "https://mise-no-mess-api-920511134268.europe-west1.run.app/tools/parse_menu",
      "schema": {
        "type": "object",
        "properties": {
          "restaurantId": { "type": "string" },
          "menuName": { "type": "string" },
          "rawMenuText": { "type": "string" },
          "stationConfig": { "type": "array" }
        },
        "required": ["restaurantId", "rawMenuText"]
      }
    },
    {
      "name": "analyze_conflicts",
      "type": "http",
      "method": "POST",
      "url": "https://mise-no-mess-api-920511134268.europe-west1.run.app/tools/analyze_conflicts",
      "schema": {
        "type": "object",
        "properties": {
          "restaurantId": { "type": "string" },
          "menuId": { "type": "string" },
          "menu": { "type": "object" },
          "stationConfig": { "type": "array" },
          "params": { "type": "object" }
        },
        "required": ["restaurantId", "menu", "stationConfig"]
      }
    },
    {
      "name": "generate_report",
      "type": "http",
      "method": "POST",
      "url": "https://mise-no-mess-api-920511134268.europe-west1.run.app/tools/generate_report",
      "schema": {
        "type": "object",
        "properties": {
          "restaurantId": { "type": "string" },
          "menuId": { "type": "string" },
          "analysisRunId": { "type": "string" },
          "menu": { "type": "object" },
          "inefficiencies": { "type": "array" }
        },
        "required": ["restaurantId", "menuId", "analysisRunId", "menu", "inefficiencies"]
      }
    }
  ]
}
